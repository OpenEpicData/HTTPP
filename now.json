{
  "version": 2,
  "name": "proxy",
  "scope": "openepicdata",
  "regions": [
    "all"
  ],
  "public": true,
  "builds": [
    {
      "src": "public/index.php",
      "use": "now-php@latest",
      "config": {
        "mode": "cgi",
        "composer": true
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "public/index.php" }
  ]
}
